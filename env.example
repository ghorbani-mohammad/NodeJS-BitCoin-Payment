# BTCPay Server Configuration
# Your BTCPay Server instance URL (without trailing slash)
BTCPAY_BASE_URL=https://your-btcpay-server.com
# API key from BTCPay Server (Server Settings > Access Tokens)
BTCPAY_API_KEY=your_btcpay_api_key_here
# Store ID from BTCPay Server
BTCPAY_STORE_ID=your_store_id_here

# Security Configuration
# Secret for webhook signature verification (generate a random string)
WEBHOOK_SECRET=your_webhook_secret_here
# Allowed CORS origin (your frontend URL)
ALLOWED_ORIGIN=https://your-frontend-domain.com

# Django Backend Integration
# URL to notify your Django backend about payment status changes
DJANGO_CALLBACK_URL=https://your-django-backend.com/api/payment-callback
# Authentication token for Django backend callbacks
DJANGO_CALLBACK_TOKEN=your_django_callback_token_here
